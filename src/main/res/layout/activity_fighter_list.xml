<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FighterListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fighterListToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/fighterList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fighterListToolbar"
        app:fastScrollAutoHide="true"
        app:fastScrollAutoHideDelay="1500"
        app:fastScrollEnableThumbInactiveColor="true"
        app:fastScrollPopupBackgroundSize="65dp"
        app:fastScrollPopupBgColor="@android:color/darker_gray"
        app:fastScrollPopupPosition="adjacent"
        app:fastScrollPopupTextColor="@android:color/primary_text_dark"
        app:fastScrollPopupTextSize="30sp"
        app:fastScrollThumbColor="@android:color/black"
        app:fastScrollThumbEnabled="true">

    </com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView>

</RelativeLayout>